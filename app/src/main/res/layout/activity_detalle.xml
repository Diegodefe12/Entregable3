<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".DetalleActivity">

    <ImageView
        android:id="@+id/detalleActivity_ImageView_FotoObra"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/detalleActivity_TextView_nombreArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Artista" />

    <TextView
        android:id="@+id/detalleActivity_TextView_nacionalidadArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nacionalidad" />

    <TextView
        android:id="@+id/detalleActivity_TextView_Influencer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Influencer" />


</LinearLayout>